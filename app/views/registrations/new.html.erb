<h1>Sign Up</h1>
<%= form_with model: @user, url: sign_up_path do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" , placeholder: "user1@email.com" %>
  </div>
  <div class="mb-3">
    <%= f.submit "Sign Up" , class: "btn btn-primary" %>
  </div>
<% end %>
